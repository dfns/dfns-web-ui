{
  "name": "@smart-chain-fr/dfns-sdk",
  "version": "0.0.4",
  "description": "A SDK for the DFNS Iframe",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "start": "node ./lib/main.js",
    "example-start-basic": "node ./lib/examples/basic.js",
    "build": "tsc",
    "dev": "tsc && npm run start",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json"
  },
  "target": "browser",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smart-chain-fr/dfns-sdk"
  },
  "author": "smart-chain-fr",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/promise-deferred": "^2.0.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "ethers": "^6.6.5",
    "@dfns/sdk": "^0.1.0-alpha.8",
		"@dfns/sdk-keysigner": "^0.1.0-alpha.8",
		"@dfns/sdk-webauthn": "^0.1.0-alpha.8"
  }
}
